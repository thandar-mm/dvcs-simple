@model IList<EmployeeViewModel>
<h1>Employee List Information</h1>
@if (TempData["info"] != null)
{
    <div class="alert alert-success">
        @TempData["info"]
    </div>

}

<table class="table table-hover" id="EmployeeTable">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">DOB</th>
            <th scope="col">DOE</th>
            <th scope="col">Department</th>
            <th scope="col">Position</th>
            <th scope="col">Salary</th>
            <th scope="col">Phone</th>
            <th scope="col">Gender</th>
            <th scope="col">Address</th>
            @if (User.IsInRole("HR"))
            {
                <th scope="col">Action</th>
            }
            
        </tr>
    </thead>
    <tbody>
        @{
            int index = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@index</th>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                <td>@item.DOE.ToString("dd-MM-yyyy")</td>
                <td>@item.DepartmentInfo</td>
                <td>@item.PositionInfo</td>
                <td>@item.BasicSalary</td>
                <td>@item.Phone</td>
                <td>@item.Gender</td>
                <td>@item.Address</td>
                @if (User.IsInRole("HR"))
                {
                    <td>
                        <div class="btn btn-group p-1">
                            <a href="/Employee/Edit?id=@item.Id" class="btn btn-primary" role="button">Edit</a>
                            <a class="btn btn-primary" asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id" onclick="return confirm('Are you Sure to Delete this record?');">Delete</a>
                        </div>
                    </td>
                }
                
            </tr>
            index++;
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#EmployeeTable').DataTable();
    });
</script>